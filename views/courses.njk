{% extends "layout.njk" %}
{% block content %}
    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{ item.id }}">
                <article>
                    <div class="item-image" style="background-image: url({{ item.background }});"></div>
                    <h2>{{ item.title }}</h2>
                    <div class="info">
                        <span>por</span>
                        <h3>Thiago Marinho</h3>
                    </div>
                    <div class="time">
                        <span>Tempo de leitura:</span>
                        <h4>{{ item.time }}</h4>
                    </div>
                </article>
            </div>
        {% endfor %}
    </section>
    <div class="modal-overlay">
        <div class="modal">
            <div class="buttons-modal">
                <a class="maximize-modal">
                    <i class="material-icons">fit_screen</i>
                </a>
                <a class="close-modal">
                    <i class="material-icons">disabled_by_default</i>
                </a>
            </div>
            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>
    <script src="scripts.js"></script>
{% endblock %}